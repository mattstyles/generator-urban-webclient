{
  "name": "{{ projectName }}",
  "version": "0.0.0",
  "description": "{{ projectDescription }}",
  "scripts": {
    "prepublish": "npm run build",
    "prepack": "npm run make",
    "watch": "parallelshell 'npm run livereload' 'npm run watch:styles' 'npm run watch:scripts' 'npm run watch:html'",
    "test": "babel-node ./spec/index.js ./src/**/*.test.js",
    "clean": "rm -rf ./dist/ && mkdir ./dist",
    "livereload": "livereload ./dist/",
    "lint": "eslint ./src/*.js",
    "build:styles": "ho compile -d -e src/styles.less -o dist/styles.css -p src:node_modules:src/components -c .hodevrc",
    "make:styles": "ho compile -e src/styles.less -o dist/styles.css -p src:node_modules:src/components -c package.json",
    "watch:styles": "ho watch -d -w 'src/**/*.less' -e src/styles.less -o dist/styles.css -p src:node_modules:src/components -c .hodevrc",
    "build:scripts": "browserify ./src/main.jsx --extension .jsx -t babelify -t flowcheck --debug > ./dist/main.js",
    "make:scripts": "NODE_ENV=prod browserify ./src/main.jsx --extension .jsx -t babelify | uglifyjs > ./dist/main.js",
    "watch:scripts": "watchify ./src/main.jsx --extension .jsx -t babelify -t flowcheck --debug -o ./dist/main.js -v",
    "make:polyfill": "browserify ./src/polyfill.js | uglifyjs > ./dist/polyfill.js",
    "make:assets": "cp -r ./src/assets ./dist/assets",
    "make:html": "mustache package.json ./src/tmpl/index.hjs > ./dist/index.html",
    "watch:html": "watch 'npm run make:html' ./src/tmpl",
    "prebuild": "npm run clean",
    "build": "npm run make:assets && npm run make:html && npm run make:polyfill && npm run build:scripts && npm run build:styles",
    "premake": "npm run clean",
    "make": "NODE_ENV=prod npm run make:assets && npm run make:html && npm run make:polyfill && npm run make:scripts && npm run make:styles"
  },
  "ho": {
    "autoprefixer-transform": {
      "browsers": [
        "last 3 versions"
      ]
    },
    "cleancss-transform": {
      "compatibility": "ie9"
    }
  },
  "bundler": {
    "paths": [
      "src",
      "node_modules",
      "src/components"
    ],
    "extensions": [
      ".js",
      ".jsx"
    ]
  },
  "keywords": [
    "yeoman",
    "generator",
    "babel",
    "es2015",
    "react",
    "less",
    "fetch"
  ],
  "author": "{{ authorName }}",
  "repository": {
    "type": "git",
    "url": "git://github.com/{{ userName }}/{{ projectName }}.git"
  },
  "bugs": {
    "url": "https://github.com/{{ userName }}/{{ projectName }}/issues"
  },
  "homepage": "https://github.com/{{ userName }}/{{ projectName }}",
  "license": "WTFPL",
  "dependencies": {
    "babel": "^5.2.17",
    "classnames": "^2.1.1",
    "eventemitter3": "^1.1.0",
    "flux": "^2.0.3",
    "normalize.css": "^3.0.3",
    "react": "^0.13.3",
    "react-router": "^0.13.3",
    "webfontloader": "1.5.18",
    "whatwg-fetch": "^0.8.1"
  },
  "devDependencies": {
    "autoprefixer-transform": "^0.3.1",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "cleancss-transform": "^0.1.1",
    "flowcheck": "^0.2.7",
    "ho": "^1.1.2",
    "livereload": "^0.3.7",
    "minimist": "^1.1.3",
    "mustache": "^2.1.3",
    "parallelshell": "^2.0.0",
    "tape": "^4.0.3",
    "uglifyjs": "^2.4.10",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  }
}
